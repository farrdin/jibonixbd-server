{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "strict": true,
    "target": "es2016",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist"
  }
}
